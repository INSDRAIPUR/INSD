<body>
  <div class="container">
    <div class="form-wrapper">
      <!-- Top header card with gradient border -->
      <div class="header-card">
        <div class="gradient-border"></div>
        <div class="header-content">
          <div class="logo-container">
            <img src="/assets/images/logo.png" alt="NSD Raipur Logo" class="logo">
            <p class="header-text">
              Join Raipur International School of Design and transform your creative passion into a successful career.
            </p>
          </div>
        </div>
      </div>

      <!-- Error message (hidden by default) -->
      <div class="error-message" id="errorMessage" style="display: none;"></div>

      <form id="admissionForm">
        <div class="form-fields">
          <!-- Full Name Field -->
          <div class="form-field">
            <label for="fullName" class="field-label">
              Full Name
            </label>
            <input
              type="text"
              id="fullName"
              name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.name %>"
              placeholder="Your answer"
              class="field-input"
              required
            >
          </div>

          <!-- Contact Number Field -->
          <div class="form-field">
            <label for="contactNumber" class="field-label">
              Contact Number
            </label>
            <input
              type="tel"
              id="contactNumber"
              name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.phone %>"
              placeholder="Your answer"
              class="field-input"
              required
            >
          </div>

          <!-- City Field -->
          <div class="form-field">
            <label for="city" class="field-label">
              From Which City you are
            </label>
            <input
              type="text"
              id="city"
              name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.city %>"
              placeholder="Your answer"
              class="field-input"
              required
            >
          </div>

          <!-- Last Qualification Field -->
          <div class="form-field">
            <label for="lastQualification" class="field-label">
              Last Qualification
            </label>
            <input
              type="text"
              id="lastQualification"
              name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.qualification %>"
              placeholder="Your answer"
              class="field-input"
              required
            >
          </div>

          <!-- Course Selection -->
          <div class="form-field">
            <h3 class="field-label">Choose Your Course</h3>
            <div class="course-grid">
              <!-- Interior Design -->
              <div class="course-option" onclick="selectCourse(this, 'interior')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.serviceType %>" value="Interior Designing" class="hidden-input" required>
                <div class="course-icon-container">
                  <i class="fas fa-home"></i>
                </div>
                <span class="course-name">Interior Designing</span>
              </div>
              
              <!-- Fashion Design -->
              <div class="course-option" onclick="selectCourse(this, 'fashion')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.serviceType %>" value="Fashion Designing" class="hidden-input">
                <div class="course-icon-container">
                  <i class="fas fa-scissors"></i>
                </div>
                <span class="course-name">Fashion Designing</span>
              </div>
              
              <!-- Graphic Design -->
              <div class="course-option" onclick="selectCourse(this, 'graphic')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.serviceType %>" value="Graphic Designing" class="hidden-input">
                <div class="course-icon-container">
                  <i class="fas fa-palette"></i>
                </div>
                <span class="course-name">Graphic Designing</span>
              </div>
              
              <!-- Photography -->
              <div class="course-option" onclick="selectCourse(this, 'photography')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.serviceType %>" value="Photography" class="hidden-input">
                <div class="course-icon-container">
                  <i class="fas fa-camera"></i>
                </div>
                <span class="course-name">Photography</span>
              </div>
              
              <!-- Event Management -->
              <div class="course-option" onclick="selectCourse(this, 'event')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.serviceType %>" value="Event Management" class="hidden-input">
                <div class="course-icon-container">
                  <i class="fas fa-calendar"></i>
                </div>
                <span class="course-name">Event Management</span>
              </div>
              
              <!-- UI/UX -->
              <div class="course-option" onclick="selectCourse(this, 'uiux')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.serviceType %>" value="UI/UX" class="hidden-input">
                <div class="course-icon-container">
                  <i class="fas fa-desktop"></i>
                </div>
                <span class="course-name">UI/UX</span>
              </div>
              
              <!-- Animation -->
              <div class="course-option" onclick="selectCourse(this, 'animation')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.serviceType %>" value="Animation Designing" class="hidden-input">
                <div class="course-icon-container">
                  <i class="fas fa-film"></i>
                </div>
                <span class="course-name">Animation Designing</span>
              </div>
            </div>
          </div>

          <!-- Degree Level -->
          <div class="form-field">
            <h3 class="field-label">Select Degree Level</h3>
            <div class="degree-grid">
              <!-- Diploma -->
              <div class="degree-option" onclick="selectDegree(this, 'Diploma')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.degreeLevel %>" value="Diploma" class="hidden-input" required>
                <span class="degree-name">Diploma</span>
              </div>
              
              <!-- Advanced Diploma -->
              <div class="degree-option" onclick="selectDegree(this, 'Advanced Diploma')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.degreeLevel %>" value="Advanced Diploma" class="hidden-input">
                <span class="degree-name">Advanced Diploma</span>
              </div>
              
              <!-- Bachelor -->
              <div class="degree-option" onclick="selectDegree(this, 'Bachelor')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.degreeLevel %>" value="Bachelor" class="hidden-input">
                <span class="degree-name">Bachelor</span>
              </div>
              
              <!-- Master -->
              <div class="degree-option" onclick="selectDegree(this, 'Master')">
                <input type="radio" name="<%= BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.degreeLevel %>" value="Master" class="hidden-input">
                <span class="degree-name">Master</span>
              </div>
            </div>
          </div>

          <!-- Hidden Fields -->
          <div class="form-group" style="display: none;">
            <input type="hidden" id="websiteProjectId" name="websiteProjectId" value="67cac379ec284e3110dda756">
            <input type="hidden" name="<%= WEBSITE_ID_KEY %>" value="<%= websiteID %>">
          </div>

          <!-- Submit Button -->
          <div class="submit-container">
            <button type="submit" class="submit-button" id="submitButton">
              <i class="fas fa-paper-plane"></i> Submit
            </button>
          </div>
        </div>
      </form>

      <!-- Contact Information -->
      <div class="contact-card">
        <div class="contact-grid">
          <!-- Address -->
          <div class="contact-item">
            <div class="contact-icon">
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="contact-details">
              <h3 class="contact-title">Address</h3>
              <p class="contact-text">
                Insd Raipur<br>
                3rd floor Ashutosh Tower<br>
                Shankar Nagar<br>
                Raipur Chhattisgarh
              </p>
            </div>
          </div>

          <!-- Phone Numbers -->
          <div class="contact-item">
            <div class="contact-icon">
              <i class="fas fa-phone"></i>
            </div>
            <div class="contact-details">
              <h3 class="contact-title">Call Now</h3>
              <p class="contact-text">
                <a href="tel:8871679000" class="contact-link">8871679000</a>
                <a href="tel:6266048246" class="contact-link">6266048246</a>
                <a href="tel:8602358000" class="contact-link">8602358000</a>
              </p>
            </div>
          </div>

          <!-- Email -->
          <div class="contact-item">
            <div class="contact-icon">
              <i class="fas fa-envelope"></i>
            </div>
            <div class="contact-details">
              <h3 class="contact-title">Email</h3>
              <p class="contact-text">
                <a href="mailto:insd0123@gmail.com" class="contact-link">insd0123@gmail.com</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Improved selection functions
    function selectCourse(element, value) {
      // Clear all selections first
      document.querySelectorAll('.course-option').forEach(el => {
        el.classList.remove('selected');
        el.querySelector('.course-icon-container').classList.remove('selected');
        el.querySelector('.course-name').classList.remove('selected-text');
      });
      
      // Set the selected radio button
      const radioInput = element.querySelector('input[type="radio"]');
      radioInput.checked = true;
      
      // Add selected classes
      element.classList.add('selected');
      element.querySelector('.course-icon-container').classList.add('selected');
      element.querySelector('.course-name').classList.add('selected-text');
    }
    
    function selectDegree(element, value) {
      // Clear all selections first
      document.querySelectorAll('.degree-option').forEach(el => {
        el.classList.remove('selected');
        el.querySelector('.degree-name').classList.remove('selected-text');
      });
      
      // Set the selected radio button
      const radioInput = element.querySelector('input[type="radio"]');
      radioInput.checked = true;
      
      // Add selected classes
      element.classList.add('selected');
      element.querySelector('.degree-name').classList.add('selected-text');
    }
    
    // Form submission handler
    document.getElementById('admissionForm').addEventListener('submit', async function (e) {
        e.preventDefault(); // Prevent the default form submission
    
        try {
            const API_BASE_URL = "<%= API_BASE_URL %>";
            const websiteID = "<%= websiteID %>";
            const WEBSITEIDKEY = "<%= WEBSITE_ID_KEY %>";
            const BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS = <%- JSON.stringify(BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS) %>;
    
            const CREATE_BOOKING_ENQUIRY_END_POINT = `${API_BASE_URL}/website/service-enquiry/create-service-enquiry`;
    
            const form = e.target; // Reference to the form element
            const WEBSITE_ID_KEY = WEBSITEIDKEY;
    
            // Show loading state
            const submitButton = document.getElementById('submitButton');
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            submitButton.disabled = true;
    
            // Prepare the payload from the form fields
            const payload = {
                [BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.name]: form.querySelector(
                    `input[name="${BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.name}"]`
                ).value,
                [BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.phone]: form.querySelector(
                    `input[name="${BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.phone}"]`
                ).value,
                [BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.city]: form.querySelector(
                    `input[name="${BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.city}"]`
                ).value,
                [BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.qualification]: form.querySelector(
                    `input[name="${BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.qualification}"]`
                ).value,
                [BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.serviceType]: form.querySelector(
                    `input[name="${BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.serviceType}"]:checked`
                )?.value,
                [BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.degreeLevel]: form.querySelector(
                    `input[name="${BOOKING_ENQUIRY_DYNAMIC_FIELDS_KEYS.degreeLevel}"]:checked`
                )?.value,
                [WEBSITE_ID_KEY]: websiteID,
                websiteProjectId: "67f7c952269ac2513528f81b"
            };
    
            // Set headers for the request
            const headers = new Headers({
                "Content-Type": "application/json",
            });
    
            // Send POST request to the API
            const response = await fetch(CREATE_BOOKING_ENQUIRY_END_POINT, {
                method: "POST",
                headers,
                body: JSON.stringify(payload),
            });
    
            // Handle response
            if (!response.ok) {
                throw new Error(`HTTP error! Status: ${response.status}`);
            }
    
            const data = await response.json();
    
            // Redirect to thank-you page on successful submission
            sessionStorage.setItem("thankYouMessage", "We've Received Your Admission inquiry and will Reach out to you soon");
            window.location.href = "/thankyou";
    
        } catch (error) {
            console.error("Form submission error:", error);
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.textContent = 'Submission failed. Please try again.';
            errorMessage.style.display = 'block';
            window.scrollTo(0, 0);
            
            // Reset button state
            submitButton.innerHTML = '<i class="fas fa-paper-plane"></i> Submit';
            submitButton.disabled = false;
        }
    });
  </script>
</body>
</html>